// This is your Prisma schema file,
// learn more about it in the docs: https://pris.ly/d/prisma-schema

generator client {
  provider = "prisma-client-js"
}

datasource db {
  provider = "mysql"
  url      = env("DATABASE_URL")
}

model User {
  id        String   @id @default(uuid())
  createdAt DateTime @default(now())
  updatedAt DateTime @updatedAt
  email     String?  @unique
  role      Role     @default(USER)
  orders    Order[]
}

enum Role {
  USER
  ADMIN
}

model Product {
  id             String          @id @default(uuid())
  createdAt      DateTime        @default(now())
  updatedAt      DateTime        @updatedAt
  name           String
  gender         ProductGender
  orderItems     OrderItem[]
  stockDataItems StockDataItem[]
}

enum ProductGender {
  MALE
  FEMALE
  KIDS
  UNISEX
}

model StockDataItem {
  id             String   @id @default(uuid())
  createdAt      DateTime @default(now())
  updatedAt      DateTime @updatedAt
  availableItems Int
  size           String   @default("L")
  product        Product  @relation(fields: [productId], references: [id])
  productId      String
}

model Order {
  id        String      @id @default(uuid())
  createdAt DateTime    @default(now())
  updatedAt DateTime    @updatedAt
  user      User        @relation(fields: [userId], references: [id])
  userId    String
  oderItems OrderItem[]
}

model OrderItem {
  id            String   @id @default(uuid())
  createdAt     DateTime @default(now())
  updatedAt     DateTime @updatedAt
  numberOfItems Int
  size          String   @default("L")
  orders        Order    @relation(fields: [orderId], references: [id])
  orderId       String
  product       Product  @relation(fields: [productId], references: [id])
  productId     String
}

enum OrderFormStatus {
  DRAFT
  ACTIVE
  INACTIVE
}

model OrderForm {
  id             String          @id @default(uuid())
  createdAt      DateTime        @default(now())
  updatedAt      DateTime        @updatedAt
  title          String
  slug           String
  status         OrderFormStatus
  orderFormItems OrderFormItem[]

  @@unique([slug])
}

enum OrderFormViewType {
  INFO_MESSAGE
  SHOPPING_FORM
  ORDER_CONFIRMATION
}

model OrderFormItem {
  id                String            @id @default(uuid())
  createdAt         DateTime          @default(now())
  updatedAt         DateTime          @updatedAt
  orderForm         OrderForm         @relation(fields: [orderFormId], references: [id])
  orderFormId       String
  orderFormViewType OrderFormViewType
  itemSequence      Int
  infoMessageFormInfoMessage String?
  shoppingFormShoppingInfo String?

  @@unique([orderFormId, itemSequence])
}
